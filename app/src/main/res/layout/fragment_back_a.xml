<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsBackStack_1_1.FragmentBackA"
    android:background="#00ff00">


    <TextView
        android:id="@+id/tvFragmentBackA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragmen A"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFragmentBackA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pasar al Fragment B"
        app:layout_constraintEnd_toEndOf="@+id/tvFragmentBackA"
        app:layout_constraintStart_toStartOf="@+id/tvFragmentBackA"
        app:layout_constraintTop_toBottomOf="@+id/tvFragmentBackA" />

</androidx.constraintlayout.widget.ConstraintLayout>